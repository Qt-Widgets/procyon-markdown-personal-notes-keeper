name: highlighter
title: Highlighter spec

rule: Comment
expr: \s*#.*$
color: darkGreen
style: italic

rule: Separator
expr: ^\s*-{3,}.*$
color: darkGray

rule: Key
expr: ^\s*(name|title|rule|expr|color|style|group|terms):
color: blue

